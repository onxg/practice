@model Practice.Core.ViewModels.UserPanel

@if (User.Identity.IsAuthenticated)
{
    <ul class="navbar-nav ml-auto mr-0 mr-md-0 my-2 my-md-0">
        <li class="nav-item">
            <div class="mt-2 text-white">Hello, @Model.FirstName!</div>
        </li>
        <li class="nav-item dropdown no-arrow">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <i class="fas fa-user-circle fa-fw"></i>
            </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                <div class="text-center"><h5 class="mb-0 pb-0">@Model.FirstName @Model.LastName</h5></div>
                <div class="text-center"><small class="text-muted">@Model.Email</small></div>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#">Settings</a>
                <a class="dropdown-item" href="#">Activity Log</a>
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">Logout</a>
            </div>
        </li>
    </ul>
}
else
{
    using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-0 my-2 my-md-0" }))
    {
        @Html.AntiForgeryToken()
        <input type="text" id="Email" name="Email" class="form-control" placeholder="Email" aria-label="Email">
        <input type="password" id="Password" name="Password" class="form-control" placeholder="Password" aria-label="Password">
        <button type="submit" class="btn btn-primary">Login</button>
    }
}